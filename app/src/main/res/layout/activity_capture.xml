            android:padding="@dimen/size_20" />

        <com.banshouweng.mybaseapplication.zxing.view.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</FrameLayout>